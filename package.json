{
  "name": "ray-ban-ai-assistant",
  "version": "1.0.0",
  "description": "AI Assistant for Ray-Ban Meta smart glasses using WhatsApp integration",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "keywords": [
    "ray-ban",
    "meta",
    "ai",
    "whatsapp",
    "assistant"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.25.0",
    "axios": "^1.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "ioredis": "^5.3.1",
    "openai": "^4.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.14.6",
    "@types/redis-mock": "^0.17.3",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "jest": "^29.7.0",
    "nock": "^13.5.4",
    "redis-mock": "^0.56.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}
